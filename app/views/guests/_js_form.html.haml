%form#rsvp-form{ name: 'guestForm', ng: {submit: 'addGuest()', hide: 'emptyGuest()' }}
  %guest-rsvp-list
  .questions
    %label.heading 
      Mailing Address
    .field
      %label Street Address
      %input.text{ name: 'address', ng:{ model: 'guest.address'} }
    .field
      %label City
      %input.text{ name: 'city', ng:{ model: 'guest.city'} }
    .field
      %label State
      %input.text{ name: 'state', ng:{ model: 'guest.state'} }
    .field
      %label Zipcode
      %input.text{ name: 'zipcode', ng:{ model: 'guest.zipcode'} }
    .field.last
      %label Country
      %input.text{ name: 'country', ng:{ model: 'guest.country'} }

    .field
      %label.heading Any dietary restrictions?
      %br/
      %input.text{ name: 'dietary_restriction', ng:{ model: 'guest.dietary_restriction'} }
    .field
      %label.heading What song would you like to hear at the wedding?
      %br/
      %input.text{ name: 'song_request', ng:{ model: 'guest.song_request'} }

    %button.go.submit{type: 'submit'} Submit