#fixed-top{style: "background-image: url('#{@header_image}')"}
  %audio#music{ src: Rails.configuration.settings['filehost'] + song.filename, preload: 'auto' }
  %canvas#viz{ width: 1350, height: 200}

  #controls.actions{ data: {id: song.id, filename: song.filename, name: song.name} }
    %span.name=song.name
    %span.minus &#8722;
    %span.add &#43;
    %span.play-btn &#9658;
    %span.pause-btn &#9616;&#9616;
    %a.download-btn{href: download_song_path(song.id), alt: 'Download Song', title: 'Download'} &#8623;


    %marquee#ticker{scrolldelay: 5, scrollamount: 2}
      =song.description
      %a{href: song.posturl, target: '_blank'}
        &nbsp; (read more)
